---
import type { CollectionEntry } from "astro:content";
import Reactions from "src/components/BriefReaction.astro";
import HotLink from "src/components/BriefHotLink.astro";
import ArticleBrief from "src/components/BriefArticle.astro";

interface Props {
  entry: CollectionEntry<"articles" | "reactions" | "hotlinks">;
}

const { entry } = Astro.props;
---

{
  (() => {
    switch (entry.collection) {
      case "articles":
        return <ArticleBrief entry={entry} />;

      case "reactions":
        return <Reactions entry={entry} />;

      case "hotlinks":
        return <HotLink entry={entry} />;
    }
  })()
}
