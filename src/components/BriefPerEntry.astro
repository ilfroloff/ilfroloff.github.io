---
import type { CollectionEntry } from "astro:content";
import BriefHotLink from "src/components/BriefHotLink.astro";
import BriefArticle from "src/components/BriefArticle.astro";

interface Props {
  entry: CollectionEntry<"articles" | "hotlinks">;
}

const { entry } = Astro.props;
---

{
  (() => {
    switch (entry.collection) {
      case "articles":
        return <BriefArticle entry={entry} />;

      case "hotlinks":
        return <BriefHotLink entry={entry} />;
    }
  })()
}
