---
import Logo from "src/components/Logo.astro";
import ThemeToggle from "src/components/solid/ThemeToggle";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="IF Developer's blog" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-800 dark:text-[#E9EDDE]">
    <header class="bg-[#159957] dark:bg-[#003000] px-6 py-3 md:px-32 lg:px-64">
      <nav class="flex items-center justify-between mx-auto">
        <div class="flex flex-1 justify-start">
          <a href="/">
            <Logo />
          </a>
        </div>
        <div class="flex"></div>
        <div class="flex flex-1 justify-end">
          <ThemeToggle client:load />
        </div>
      </nav>
    </header>
    <main class="container p-12 lg:px-56">
      <slot />
    </main>
  </body>
</html>

<style is:global></style>

<script is:inline>
  (() => {
    const defaultTheme =
      window.localStorage.getItem("theme") ||
      (window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light");

    document.documentElement.classList.toggle("dark", defaultTheme === "dark");
    window.localStorage.setItem("theme", defaultTheme);
  })();
</script>
